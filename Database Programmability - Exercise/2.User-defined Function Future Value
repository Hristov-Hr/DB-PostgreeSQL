CREATE OR REPLACE FUNCTION
	fn_calculate_future_value(
	initial_sum INT,
	yearly_interest_rate DECIMAL,
	number_of_years INT
	)
RETURNS DECIMAL AS
$$
	DECLARE
		future_value DECIMAL;
	BEGIN
		SELECT
		TRUNC(initial_sum *
		(pow(1 + yearly_interest_rate, number_of_years)),4)
		INTO future_value;
		RETURN future_value;
	END;
$$
LANGUAGE plpgsql;